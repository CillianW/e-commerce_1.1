<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.UserProfileActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_confirm_details"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/theme_landscape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.example.e_commerce_11.utilities.BoldTextView
            android:id="@+id/order_confirmation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="75dp"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal"
            android:text="@string/title_order_activity"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/ll_order_confirmation_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_confirm_details"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".activities.DashboardActivity"
        tools:showIn="@layout/activity_order">

        <com.example.e_commerce_11.utilities.BoldTextView
            android:id="@+id/ll_order_confirmation_heading_name"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Product"
            android:textColor="@color/themeDarkPurple"
            android:gravity="center"
            android:textStyle="bold"
            />

        <com.example.e_commerce_11.utilities.BoldTextView
            android:id="@+id/ll_order_confirmation_heading_quantity"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Quantity"
            android:textColor="@color/themeDarkPurple"
            android:gravity="center"
            android:textStyle="bold"/>

        <com.example.e_commerce_11.utilities.BoldTextView
            android:id="@+id/ll_order_confirmation_heading_price"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Price"
            android:textColor="@color/themeDarkPurple"
            android:gravity="center"
            android:textStyle="bold"
            />

    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cl_order_confirmation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="300dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_confirm_details"

        tools:context=".activities.ui.products.ProductsFragment">

        <LinearLayout
            android:id="@+id/ll_recycler_view_order_confirmation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context=".activities.DashboardActivity"
            tools:showIn="@layout/activity_cart">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_Items_List_order_confirmation"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/ll_order_confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/cl_order_confirmation"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".activities.DashboardActivity"
        tools:showIn="@layout/activity_order">

        <com.example.e_commerce_11.utilities.BoldTextView
            android:id="@+id/text_order_total"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="136dp"
            android:text="Total Price: â‚¬"
            android:textColor="@color/themeDarkPurple"
            android:gravity="right"
            android:textStyle="bold"
            />

        <com.example.e_commerce_11.utilities.BoldTextView
            android:id="@+id/text_order_total_calculated"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center"
            android:textStyle="bold"
            />

    </LinearLayout>

    <com.example.e_commerce_11.utilities.Button
        android:id="@+id/btn_return_to_dashboard"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="150dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/button_background"
        android:text="@string/btn_return_to_dashboard"

        />

</androidx.constraintlayout.widget.ConstraintLayout>
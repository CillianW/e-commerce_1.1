<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.UserProfileActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_order_details"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/theme_landscape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.example.e_commerce_11.utilities.BoldTextView
            android:id="@+id/user_profile_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="75dp"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal"
            android:text="@string/title_order_details"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/ll_order_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_order_details">

        <com.example.e_commerce_11.utilities.BoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="Order Number: "
            android:textColor="@color/themeDarkPurple"
            android:textStyle="bold" />

            <TextView
            android:id="@+id/text_order_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:gravity="center_horizontal"
            android:text="Order Number"
            android:textColor="@color/themeDarkPurple" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll_order_details_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/ll_order_number">

        <com.example.e_commerce_11.utilities.BoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="Ship to: "
            android:textColor="@color/themeDarkPurple"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_customer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:gravity="center_horizontal"
            android:text="Customer Name"
            android:textColor="@color/themeDarkPurple" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_customer_address1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Address 1"
        android:textColor="@color/themeDarkPurple"
        app:layout_constraintTop_toBottomOf="@+id/ll_order_details_name" />

    <TextView
        android:id="@+id/text_customer_address2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Address 2"
        android:textColor="@color/themeDarkPurple"
        app:layout_constraintTop_toBottomOf="@+id/text_customer_address1" />

    <TextView
        android:id="@+id/text_customer_address3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Address 3"
        android:textColor="@color/themeDarkPurple"
        app:layout_constraintTop_toBottomOf="@+id/text_customer_address2" />

    <TextView
        android:id="@+id/text_customer_address4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Address 4"
        android:textColor="@color/themeDarkPurple"
        app:layout_constraintTop_toBottomOf="@+id/text_customer_address3" />

    <TextView
        android:id="@+id/text_customer_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Email"
        android:textColor="@color/themeDarkPurple"
        app:layout_constraintTop_toBottomOf="@+id/text_customer_address4" />


    <LinearLayout
        android:id="@+id/ll_order_details_items_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/text_customer_email">

        <com.example.e_commerce_11.utilities.BoldTextView
            android:id="@+id/text_item_name"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:textColor="@color/themeDarkPurple"
            android:gravity="center_horizontal"
            android:textStyle="bold" />

        <com.example.e_commerce_11.utilities.BoldTextView
            android:id="@+id/text_item_quantity"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:text="Quantity"
            android:textColor="@color/themeDarkPurple"
            android:textStyle="bold"/>

        <com.example.e_commerce_11.utilities.BoldTextView
            android:id="@+id/text_item_price"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Price"
            android:textColor="@color/themeDarkPurple"
            android:textStyle="bold"/>

    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cl_order_items"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_order_details_items_header"
        tools:context=".activities.ui.products.ProductsFragment">

        <LinearLayout
            android:id="@+id/ll_recycler_view_order_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context=".activities.DashboardActivity"
            tools:showIn="@layout/activity_cart">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_Items_List_order_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:scrollIndicators="right"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarSize="10sp"
                android:scrollbarStyle="insideInset"/>
        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/ll_order_details_total_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_order_items"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".activities.DashboardActivity"
        tools:showIn="@layout/activity_order">

        <com.example.e_commerce_11.utilities.BoldTextView
            android:id="@+id/text_order_details_total"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="136dp"
            android:text="Total Price: â‚¬"
            android:textColor="@color/themeDarkPurple"
            android:gravity="right"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/text_order_details_total_calculated"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/themeDarkPurple"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
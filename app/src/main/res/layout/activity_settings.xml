<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SettingsActivity"
    android:background="@color/white">

    <!--    properties for toolbar containing page title "Settings"-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_settings_activity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.example.e_commerce_11.utilities.BoldTextView
            android:id="@+id/settings_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="75dp"
            android:gravity="center"
            android:text="@string/title_settings"
            android:textColor="@color/white"
            android:textSize="@dimen/title_textSize"
            android:visibility="visible"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:id="@+id/fl_header_image"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/auth_header_image_height"
        android:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--        background image properties-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/content_description"
            android:scaleType="fitXY"
            android:src="@drawable/theme_landscape" />

    </FrameLayout>

    <!--        inset logo properties-->
    <ImageView
        android:id="@+id/settings_profile_pic"
        android:layout_width="@dimen/profile_pic_width"
        android:layout_height="@dimen/profile_pic_height"
        android:layout_gravity="center"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/empty_profile_pic"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.example.e_commerce_11.utilities.BoldTextView
        android:id="@+id/settings_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/settings_profile_pic"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:textColor="@color/themeDarkPurple"/>

    <com.example.e_commerce_11.utilities.BoldTextView
        android:id="@+id/settings_user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/settings_user_name"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:textColor="@color/themeDarkPurple"/>

    <com.example.e_commerce_11.utilities.BoldTextView
        android:id="@+id/settings_user_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/settings_user_email"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:textColor="@color/themeDarkPurple"/>

    <com.example.e_commerce_11.utilities.BoldTextView
        android:id="@+id/settings_user_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/settings_user_phone_number"
        android:layout_marginTop="25dp"
        android:gravity="center"/>


    <com.example.e_commerce_11.utilities.Button
        android:id="@+id/btn_edit_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="@string/btn_edit_details"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/button_background_grey"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:textSize="@dimen/btn_textSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_user_gender"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.example.e_commerce_11.utilities.Button
        android:id="@+id/btn_addresses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="@string/btn_addresses_string"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/button_background_grey"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:textSize="@dimen/btn_textSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_edit_details"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.example.e_commerce_11.utilities.Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="@dimen/btn_padding"
        android:layout_marginRight="@dimen/btn_padding"
        android:text="@string/btn_logout_string"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/button_background"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:textSize="@dimen/btn_textSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_addresses"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>